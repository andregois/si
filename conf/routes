#GET     /pasta/:id/compartilhar           controllers.Application.formularioCompartilhar(id: String)
#POST    /pasta/arquivo/compartilhar       controllers.Application.compartilhar()
#
#GET     /pasta/novo                       controllers.Application.formularioNovaPasta()
#POST    /pasta/novo                       controllers.Application.novaPasta()




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
