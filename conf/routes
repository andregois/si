# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                         controllers.Application.index()
GET     /usuario/novo             controllers.Application.formularioNovoUsuario()
POST    /usuario/novo             controllers.Application.novoUsuario()
POST    /usuario/login            controllers.Application.login()
GET    /usuario/login            controllers.Application.diretorio()
GET     /arquivo/novo             controllers.Application.formularioNovoArquivo()
POST    /arquivo/novo             controllers.Application.novoArquivo()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
