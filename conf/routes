# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                 controllers.Application.index()
GET     /usuario/novo                     controllers.Application.formularioNovoUsuario()
POST    /usuario/novo                     controllers.Application.novoUsuario()
POST    /usuario/login                    controllers.Application.login()
GET     /usuario/diretorio                controllers.Application.diretorio()
GET     /pasta/:id/novo                   controllers.Application.formularioNovoArquivo(id: String)
POST    /pasta/arquivo/novo                   controllers.Application.novoArquivo()
GET     /pasta/novo                       controllers.Application.formularioNovaPasta()
POST    /pasta/novo                       controllers.Application.novaPasta()
GET     /pasta/:id                        controllers.Application.pasta(id: String)
GET     /arquivo/:id                      controllers.Application.arquivo(id: String)




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
